import { Component, Prop, Host, h } from '@stencil/core';
import { CustomCssClass, ICustomCss } from '../../../types';
import { getClassMap } from '../../../utils/css-class.helper';

/**
 * @part illustration - The illustration container.
 */
@Component({
	tag: '{{tagName}}',
	styleUrl: '../../../illustrations/illustrations.scss',
	shadow: true
})
export class {{className}} implements ICustomCss {
	/** @inheritdoc */
	@Prop({ reflect: true }) customClass: CustomCssClass = '';

	render() {

		return (
			<Host>
				<svg
					part="illustration"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="{{viewBox}}"
					class=\{{ ...getClassMap(this.customClass), illustration: true }}
				>
					{{{illustration}}}
				</svg>
			</Host>
		);
	}
}
