{
	"name": "@kelvininc/react-ui-components",
	"version": "0.4.0",
	"description": "Kelvin UI Components for React applications",
	"homepage": "https://docs.kelvininc.com",
	"license": "SEE LICENSE IN LICENSE",
	"keywords": [
		"kelvin",
		"kelvin ui components",
		"kelvin react ui components"
	],
	"author": {
		"name": "Kevin Inc.",
		"email": "support@kelvininc.com",
		"url": "https://kelvininc.com"
	},
	"bugs": {
		"email": "support@kelvininc.com",
		"url": "https://support.kelvininc.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kelvininc/ui-components"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false,
	"scripts": {
		"build": "rm -rf dist-transpiled dist && npm run compile",
		"clean": "rm -rf dist-transpiled dist assets node_modules storybook-static",
		"compile": "npm run tsc && rollup -c",
		"tsc": "tsc -p tsconfig.lib.json",
		"tsc:watch": "tsc -w -p .",
		"rollup": "rollup -c",
		"rollup:watch": "rollup -w -c",
		"postinstall": "node -e \"try{require('./.scripts/copy-icons.js')}catch(e){}\"",
		"lint": "npm run lint:ts",
		"lint:ts": "eslint src --ext .ts,.tsx",
		"lint:ts:fix": "eslint src --fix --ext .ts,.tsx",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"deploy-storybook": "storybook-to-ghpages --ci"
	},
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/types/index.d.ts",
	"files": [
		"dist/",
		"assets/",
		".scripts/"
	],
	"dependencies": {
		"@kelvininc/ui-components": "0.4.0",
		"fs-extra": "10.0.0"
	},
	"devDependencies": {
		"@babel/core": "7.17.2",
		"@etchteam/storybook-addon-css-variables-theme": "1.1.1",
		"@pxtrn/storybook-addon-docs-stencil": "^6.4.1",
		"@rollup/plugin-node-resolve": "^13.1.3",
		"@storybook/addon-actions": "^6.4.19",
		"@storybook/addon-essentials": "^6.4.19",
		"@storybook/addon-links": "^6.4.19",
		"@storybook/addon-notes": "^5.3.21",
		"@storybook/react": "^6.4.19",
		"@storybook/storybook-deployer": "^2.8.10",
		"@types/jest": "23.3.9",
		"@types/node": "^14.0.0",
		"@types/react": "^17.0.34",
		"@types/react-dom": "^17.0.11",
		"@typescript-eslint/parser": "^5.12.1",
		"babel-loader": "^8.2.3",
		"concurrently": "7.0.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.28.0",
		"jest": "^23.0.0",
		"jest-dom": "^3.0.2",
		"prettier": "^2.5.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"rollup": "^2.67.2",
		"rollup-plugin-copy": "^3.4.0",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-postcss": "^4.0.2",
		"sass": "^1.49.7",
		"storybook-addon-sass-postcss": "0.1.0",
		"typescript": "^4.5.5"
	},
	"peerDependencies": {
		"react": ">=17.0.2",
		"react-dom": ">=17.0.2"
	},
	"jest": {
		"preset": "ts-jest",
		"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
		"testPathIgnorePatterns": [
			"node_modules",
			"dist"
		]
	}
}
