{
	"name": "peacock-ui",
	"version": "0.0.0-development",
	"description": "Stencil Component Starter",
	"main": "dist/index.cjs.js",
	"module": "dist/index.js",
	"es2015": "dist/esm/index.mjs",
	"es2017": "dist/esm/index.mjs",
	"types": "dist/types/components.d.ts",
	"collection": "dist/collection/collection-manifest.json",
	"collection:main": "dist/collection/index.js",
	"unpkg": "dist/peacock-ui/peacock-ui.esm.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/kelvininc/peacock-ui.git"
	},
	"files": [
		"dist/",
		"loader/"
	],
	"scripts": {
		"start": "stencil build --watch --serve",
		"start:storybook": "start-storybook -p 6006",
		"dev": "concurrently \"npm run start\" \"npm run start:storybook\" --names stencil,storybook --kill-others --restart-tries 1 --restart-delay 2000",
		"test": "stencil test --spec --e2e",
		"test:watch": "stencil test --spec --e2e --watchAll",
		"build": "stencil build --docs",
		"build:watch": "stencil build --watch",
		"build:storybook": "build-storybook -c .storybook -o dist-storybook",
		"generate": "stencil generate",
		"lint": "npm run lint:ts && npm run lint:sass",
		"lint:ts": "eslint src/**/*{.ts,.tsx}",
		"lint:ts:fix": "eslint --fix src/**/*{.ts,.tsx}",
		"lint:sass": "stylelint '**/*.scss'",
		"lint:sass:fix": "stylelint '**/*.scss' --fix",
		"validate": "npm run lint && npm run test && npm run build"
	},
	"dependencies": {
		"@stencil/core": "^2.13.0",
		"@stencil/react-output-target": "^0.2.1",
		"@stencil/angular-output-target": "^0.4.0"
	},
	"devDependencies": {
		"@babel/core": "^7.16.12",
		"@etchteam/storybook-addon-css-variables-theme": "^1.1.1",
		"@stencil/eslint-plugin": "^0.4.0",
		"@stencil/sass": "^1.5.2",
		"@storybook/addon-actions": "^6.4.17",
		"@storybook/addon-essentials": "^6.4.17",
		"@storybook/addon-links": "^6.4.17",
		"@storybook/html": "^6.4.17",
		"@types/jest": "^27.0.3",
		"@types/lodash-es": "^4.17.5",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"babel-loader": "^8.2.3",
		"concurrently": "^7.0.0",
		"eslint": "^7.32.0",
		"eslint-plugin-react": "^7.28.0",
		"jest": "^27.4.5",
		"jest-cli": "^27.4.5",
		"lodash-es": "^4.17.21",
		"postcss": "^8.4.6",
		"puppeteer": "^13.1.3",
		"semantic-release": "^19.0.2",
		"stylelint": "^14.3.0",
		"stylelint-config-sass-guidelines": "^9.0.1",
		"typescript": "^4.5.5"
	},
	"license": "MIT"
}
