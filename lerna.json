{
	"$schema": "node_modules/lerna/schemas/lerna-schema.json",
	"packages": [
		"packages/*"
	],
	"command": {
		"version": {
			"exact": true
		},
		"publish": {
			"message": "chore(release): publish %s [skip ci]",
			"conventionalCommits": true
		}
	},
	"ignoreChanges": [
		"**/__fixtures__/**",
		"**/__tests__/**",
		"**/*.md",
		"**/package.json",
		"pnpm-lock.yaml",
		"**/tsconfig.json"
	],
	"useWorkspaces": true,
	"npmClient": "pnpm",
	"version": "0.0.0"
}
